<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/tittle"
        layout="@layout/common_actionbar_no_shadow" />
    <com.amap.api.maps.MapView
        android:layout_below="@+id/tittle"
        android:id="@+id/car_address_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true" />

        <LinearLayout
            android:id="@+id/car_address_map_navi_llyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:padding="20dp">

            <ImageView
                android:id="@+id/car_btn_my_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/car_locate_cur_btn" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/car_btn_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/car_locate_scooter_icon" />

    </LinearLayout>
</RelativeLayout>