<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_recy_select_combo"
    android:layout_width="160dp"
    android:layout_height="120dp"
    android:layout_marginTop="8dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/select_combo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/yellow_01"
        android:textSize="16sp"
        android:layout_marginTop="18dp"
        android:layout_marginStart="36dp"
        />

    <TextView
        android:layout_marginTop="8dp"
        android:id="@+id/select_combo_times_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginStart="36dp"

        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_select_combo_current_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginStart="36dp"
         />

        <TextView
            android:id="@+id/item_select_combo_past_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/white"
           />

    </LinearLayout>
</LinearLayout>
